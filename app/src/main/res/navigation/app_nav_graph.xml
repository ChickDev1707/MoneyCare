<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/budgetFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.moneycare.ui.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.example.moneycare.ui.view.TransactionFragment"
        android:label="fragment_transaction_list"
        tools:layout="@layout/fragment_transaction_list" >
        <action
            android:id="@+id/action_transactionFragment_to_newTransaction"
            app:destination="@id/newTransaction" />
    </fragment>
    <fragment
        android:id="@+id/newTransaction"
        android:name="com.example.moneycare.ui.view.NewTransaction"
        android:label="fragment_new_transaction"
        tools:layout="@layout/fragment_new_transaction" />
    <fragment
        android:id="@+id/budgetFragment"
        android:name="com.example.moneycare.ui.view.BudgetFragment"
        android:label="fragment_budget"
        tools:layout="@layout/fragment_budget" >
        <action
            android:id="@+id/action_budgetFragment_to_addBudgetFragment"
            app:destination="@id/addBudgetFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBudgetFragment"
        android:name="com.example.moneycare.ui.view.AddBudgetFragment"
        android:label="fragment_add_budget"
        tools:layout="@layout/fragment_add_budget" />
</navigation>