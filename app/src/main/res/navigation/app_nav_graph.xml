<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/transactionFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.moneycare.ui.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.example.moneycare.ui.view.transaction.TransactionFragment"
        android:label="fragment_transaction_list"
        tools:layout="@layout/fragment_transaction_list" >

        <action
            android:id="@+id/action_transactionFragment_to_newTransactionFragment"
            app:destination="@id/newTransactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/newTransactionFragment"
        android:name="com.example.moneycare.ui.view.transaction.NewTransactionFragment"
        android:label="fragment_new_transaction"
        tools:layout="@layout/fragment_new_transaction" >
        <action
            android:id="@+id/action_newTransactionFragment_to_groupFragment"
            app:destination="@id/groupFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupFragment"
        android:name="com.example.moneycare.ui.view.transaction.GroupFragment"
        android:label="fragment_group_list"
        tools:layout="@layout/fragment_group_list" />

</navigation>