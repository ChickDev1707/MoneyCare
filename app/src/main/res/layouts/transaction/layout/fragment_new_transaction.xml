<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="newTransVM"
            type="com.example.moneycare.ui.viewmodel.transaction.NewTransactionViewModel" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        tools:context=".ui.view.transaction.NewTransactionFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!-- TODO: Update blank fragment layout -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:contentPadding="5dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_money_24"
                    android:hint="Số tiền"
                    android:layout_marginBottom="10dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_trans_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="@={`` + newTransVM.money}"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:hint="Chọn nhóm"
                    android:layout_marginBottom="10dp"
                    >

                    <AutoCompleteTextView
                        android:clickable="true"
                        android:id="@+id/new_trans_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:text="@{newTransVM.group.name}"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ghi chú"
                    android:layout_marginBottom="10dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_trans_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={newTransVM.note}"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ngày"
                    android:layout_marginBottom="10dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_trans_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:editable="false"
                        android:inputType="date"
                        android:text="@{newTransVM.date.toString()}"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ví"
                    android:layout_marginBottom="10dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/new_trans_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{newTransVM.wallet}"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/save_new_trans_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Thêm"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>