<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.transaction.wallet.SelectWalletActivity"
    android:background="@color/gray_100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/basic_app_bar"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wallet_list"
            android:name="com.example.moneycare.SelectWalletActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_weight="1"
            app:layoutManager="LinearLayoutManager"
            tools:context=".ui.view.transaction.wallet.SelectWalletActivity"
            tools:listitem="@layout/wallet_item" />
    </LinearLayout>
</FrameLayout>
