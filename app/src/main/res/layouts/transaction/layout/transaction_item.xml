<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/transaction_item"
    android:padding="12dp"
    android:paddingStart="22dp"
    android:paddingEnd="@dimen/layout_padding"
    android:background="?android:attr/selectableItemBackground">
    <TextView
        android:id="@+id/transaction_day"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="24"
        android:textAlignment="center"
        android:textColor="@color/blue_grey_main"
        android:layout_marginEnd="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_extra_small"
            android:text="Hello"
            android:layout_marginTop="3dp"
            android:textAppearance="?attr/textAppearanceListItem" />
        <TextView
            android:id="@+id/transaction_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_extra_small"
            android:text="56 trans"
            android:textColor="@color/gray_700"
            android:layout_marginTop="3dp"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>
    <TextView
        android:id="@+id/transaction_money"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="@dimen/font_size_small"
        android:gravity="end"
        android:textAppearance="?attr/textAppearanceListItem" />
</LinearLayout>