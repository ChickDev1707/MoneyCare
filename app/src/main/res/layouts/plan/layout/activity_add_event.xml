<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.plan.event.EventActivity">
    <data>
        <variable
            name="eventVM"
            type="com.example.moneycare.ui.viewmodel.plan.EventViewModel" />
        <import type="com.example.moneycare.utils.DateTimeUtil"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#EFEFF3"
        android:layout_height="match_parent">
        <include layout="@layout/basic_app_bar"/>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/layout_padding"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:paddingHorizontal="@dimen/layout_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:id="@+id/img_layout"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp">
                            <ImageView
                                android:id="@+id/select_event_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#DABEBE"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:drawablePadding="5dp"
                            android:layout_marginRight="5dp"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="5dp"
                            android:background="#2ebadc"/>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/img_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeWidth="0dp"
                        android:hint="Tên"
                        android:keyboardNavigationCluster="true"
                        android:layout_marginBottom="@dimen/layout_padding"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_add_event_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@={eventVM.eventName}"
                            android:textSize="@dimen/font_size_extra_large"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:background="#949494"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/layout_padding"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:startIconDrawable="@drawable/ic_calendar_today_24"
                    app:endIconDrawable="@drawable/ic_arrow_right_24"
                    app:endIconMode="custom"
                    android:hint="Ngày kết thúc"
                    android:layout_marginBottom="@dimen/layout_padding"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_event_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:focusable="false"
                        android:textSize="@dimen/font_size_normal"
                        android:text="@{DateTimeUtil.getDateString(context, eventVM.endDate)}"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/layout_padding"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:startIconDrawable="@drawable/ic_account_balance_wallet_24"
                    app:endIconDrawable="@drawable/ic_arrow_right_24"
                    android:hint="Ví"
                    app:endIconMode="custom">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/add_event_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:focusable="false"
                        android:textSize="@dimen/font_size_normal"
                        android:inputType="none"
                        android:text="@{eventVM.wallet.name}"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:text="Thêm"
                    android:id="@+id/btn_add_event"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/layout_padding"
                    android:layout_marginVertical="20dp"
                    android:textAllCaps="false"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>