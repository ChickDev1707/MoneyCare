<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.plan.event.EventDetailActivity">
    <data>
        <variable
            name="eventVM"
            type="com.example.moneycare.ui.viewmodel.plan.EventViewModel" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:background="#EFEFF3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/update_app_bar"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            app:cardCornerRadius="20dp">
                            <ImageView
                                android:id="@+id/img_item_event_detail"
                                android:background="#DABEBE"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:text="Đi chơi"
                            android:id="@+id/event_name_detail"
                            android:layout_centerVertical="true"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <RelativeLayout
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/icon_calendar"
                            android:drawableLeft="@drawable/ic_calendar_today_24"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/end_date_event_detail"
                            android:layout_toRightOf="@id/icon_calendar"
                            android:text="19/06/2022"
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/days_left_event_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/end_date_event_detail"
                            android:layout_toRightOf="@id/icon_calendar"
                            android:text="Còn 3 ngày"
                            android:textSize="14dp" />
                    </RelativeLayout>
                    <LinearLayout
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:drawableLeft="@drawable/ic_account_balance_wallet_24"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/event_detail_wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/icon_calendar"
                            android:text="Tất cả các ví"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/red_main"
                        android:paddingVertical="10dp"
                        android:textAlignment="center"
                        android:background="@color/white"
                        android:textSize="18dp"
                        android:text="Đánh dấu chưa hoàn tất"
                        android:id="@+id/btn_switch_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:background="#E0E0E0"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:paddingVertical="10dp"
                        android:textColor="@color/red_main"
                        android:textAlignment="center"
                        android:background="@color/white"
                        android:textSize="18dp"
                        android:text="Sổ giao dịch"
                        android:id="@+id/btn_see_transactions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</layout>