<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.view.plan.budget.BudgetActivity">
    <data>
        <variable
            name="budgetVM"
            type="com.example.moneycare.ui.viewmodel.plan.BudgetViewModel" />
        <import type="com.example.moneycare.utils.Converter"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_100"
            android:orientation="vertical"
            >
            <include android:id="@+id/budget_app_bar" layout="@layout/basic_app_bar"/>
            <LinearLayout
                android:layout_below="@id/budget_app_bar"
                android:id="@+id/budget_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/layout_padding"
                    android:paddingHorizontal="10dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/text_field_bottom_margin"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green_main"
                            android:textStyle="bold"
                            android:textSize="@dimen/font_size_medium"
                            android:text="@{Converter.toFormattedMoney(context, budgetVM.spendableMoney)}"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_small"
                            android:text="Khoản có thể chi"/>
                    </LinearLayout>
                    <GridLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:columnCount="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content">
                            <com.google.android.material.card.MaterialCardView
                                app:cardElevation="1dp"
                                android:backgroundTint="#f5f6fa"
                                app:cardUseCompatPadding="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:padding="4dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/font_size_normal"
                                        android:textColor="@color/black"
                                        android:text="@{Converter.toFormattedMoney(context, budgetVM.totalBudget)}"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/font_size_extra_small"
                                        android:text="Tổng ngân sách"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content">
                            <com.google.android.material.card.MaterialCardView
                                app:cardElevation="1dp"
                                android:backgroundTint="#f5f6fa"
                                app:cardUseCompatPadding="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:padding="4dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/font_size_normal"
                                        android:textColor="@color/black"
                                        android:text="@{Converter.toFormattedMoney(context, budgetVM.totalSpent)}"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/font_size_extra_small"
                                        android:text="Tổng đã chi"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content">
                            <com.google.android.material.card.MaterialCardView
                                app:cardElevation="1dp"
                                app:cardUseCompatPadding="true"
                                android:backgroundTint="#f5f6fa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:padding="4dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/font_size_normal"
                                        android:textColor="@color/black"
                                        android:text='@{budgetVM.daysLeft.toString() + " ngày"}' />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/font_size_extra_small"
                                        android:text="Đến cuối tháng"/>
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:paddingTop="@dimen/layout_padding"
                    android:paddingHorizontal="10dp"
                    android:textSize="@dimen/font_size_small"
                    android:text="Các nhóm đã có ngân sách"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.core.widget.NestedScrollView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/budget_gr_list"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/group_item"
                        android:name="com.example.moneycare.BudgetFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/budget_empty"
                android:layout_below="@id/budget_app_bar"
                android:gravity="center"
                android:paddingHorizontal="@dimen/layout_padding"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/ic_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAlignment="center"
                    android:textSize="@dimen/font_size_medium"
                    android:text="Không có ngân sách nào trong tháng này!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <include
                layout="@layout/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/budget_app_bar" />
        </RelativeLayout>
        <include layout="@layout/floating_add_btn"/>
    </FrameLayout>
</layout>
