<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.view.plan.event.EventActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFEFF3">
            <include android:id="@+id/event_app_bar"  layout="@layout/basic_app_bar" />
            <androidx.core.widget.NestedScrollView
                android:layout_below="@id/event_app_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/event_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/event_ongoing"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="ĐANG ÁP DỤNG"
                            android:paddingHorizontal="@dimen/layout_padding"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingHorizontal="@dimen/layout_padding"
                            android:background="@color/white"
                            android:id="@+id/event_list_ongoing"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/event_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/event_end"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="ĐÃ KẾT THÚC"
                            android:paddingHorizontal="@dimen/layout_padding"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:background="@color/white"
                            android:paddingHorizontal="@dimen/layout_padding"
                            android:id="@+id/event_list_end"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/event_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/event_empty"
                android:layout_below="@id/event_app_bar"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/ic_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/font_size_normal"
                    android:text="Không có sự kiện nào!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <include
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_below="@id/event_app_bar"
                layout="@layout/loading"
                />
        </RelativeLayout>
        <include layout="@layout/floating_add_btn"/>
    </FrameLayout>
</layout>
