<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.plan.budget.AddBudgetActivity">
    <data>
        <variable
            name="viewmodel"
            type="com.example.moneycare.ui.viewmodel.plan.NewBudgetViewModel" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/basic_app_bar"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_item_select_group"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp" />
                <LinearLayout
                    android:layout_toRightOf="@+id/img_item_select_group"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        app:boxBackgroundColor="@android:color/transparent"
                        android:hint="Chọn nhóm"
                        android:layout_marginBottom="@dimen/text_field_bottom_margin"
                        >
                        <AutoCompleteTextView
                            android:clickable="true"
                            android:id="@+id/add_budget_group_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:text="@{viewmodel.groupSelected.name}"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_marginTop="40dp"
                        android:text='@{"Giới hạn trong tháng " + viewmodel.currMonth.toString()}'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/money_txt"
                        android:text="0"
                        android:drawableLeft="@drawable/ic_vietnamese_dong"
                        android:drawablePadding="5dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_add_budget"
                        android:layout_width="100dp"
                        android:text="Lưu"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</layout>