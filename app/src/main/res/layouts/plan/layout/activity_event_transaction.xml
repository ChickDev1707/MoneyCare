<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.view.plan.event.EventTransactionActivity">
    <data>
        <variable
            name="eventVM"
            type="com.example.moneycare.ui.viewmodel.plan.EventViewModel" />
    </data>
    <RelativeLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFF3"
        >
        <include android:id="@+id/event_trans_tool_bar" layout="@layout/basic_app_bar" />
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/event_trans_container"
            android:layout_below="@id/event_trans_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/layout_bottom_padding">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/layout_padding"
                        android:paddingHorizontal="@dimen/layout_padding"
                        android:background="@color/white"
                        android:layout_marginBottom="30dp"
                        >
                        <TextView
                            android:text="Tổng quan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_large"
                            android:textStyle="bold"
                            android:textColor="@color/blue_grey_main"
                            android:drawablePadding="5dp"
                            android:layout_marginTop="@dimen/layout_padding"
                            android:layout_marginBottom="@dimen/layout_padding"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:layout_weight="1"
                                android:textSize="@dimen/font_size_normal"
                                android:text="Khoản thu"/>
                            <TextView
                                android:text="@{eventVM.moneyIn.toString()}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textSize="@dimen/font_size_normal"
                                android:layout_weight="1"
                                android:textColor="@color/green_main"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:textSize="@dimen/font_size_normal"
                                android:layout_weight="1"
                                android:text="Khoản chi"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:textSize="@dimen/font_size_normal"
                                android:textColor="@color/red_main"
                                android:layout_weight="1"
                                android:text="@{eventVM.moneyOut.toString()}"/>
                        </LinearLayout>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="2dp"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/gray_100" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textSize="@dimen/font_size_normal"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="@color/blue_grey_main"
                            android:layout_marginBottom="10dp"
                            android:text="@{eventVM.moneyTotal.toString()}"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/event_transaction_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="LinearLayoutManager"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/group_transaction_item" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/event_trans_empty"
            android:layout_below="@id/event_trans_tool_bar"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/font_size_medium"
                android:text="Không có giao dịch nào!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <include
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@id/event_trans_tool_bar"
            layout="@layout/loading"
            />
    </RelativeLayout>
</layout>